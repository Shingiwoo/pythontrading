BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=false

# Opsi WS guard (sesuai patch sebelumnya)
USE_MULTIPLEX=1
WS_NO_MSG_TIMEOUT=90
WS_BACKOFF_BASE=1.7
WS_BACKOFF_MAX=60

# ==================== KONFIGURASI TRADING ====================
# === Time stop ===
# Jangan cut kalau cuma sedikit minus; kasih toleransi -0.2% sebelum time-stop
MIN_ROI_TO_CLOSE_BY_TIME=-0.002

MAX_HOLD_SECONDS=3600

# === Risk/sizing ===
# Kalau code kamu mengartikan RISK_PERCENTAGE sebagai "0..1", pakai 0.01
# Kalau sebagai "persen 0..100", pakai 1.0
RISK_PERCENTAGE=0.01

WS_MAX_RETRY=2
CONFIG_WATCH_INTERVAL=5
STATE_FILE=/data/active_position_state.json
EXCHANGEINFO_CACHE=/data/exchange_info_cache.json
EXCHANGEINFO_TTL_SECONDS=21600
SYMBOLS=ADAUSDT,DOGEUSDT,XRPUSDT,TURBOUSDT

# === Dry-run trading ===
COOLDOWN_USE_BAR_TIME=1

# === ML live ===
USE_ML=1
SCORE_THRESHOLD=1.35
ML_MIN_TRAIN_BARS=400
ML_LOOKAHEAD=5
ML_RETRAIN_EVERY=120
ML_UP_PROB=0.60
ML_DOWN_PROB=0.40
ML_MIN_TRAIN_BARS=400
ML_RETRAIN_EVERY=5000

# === Eksekusi & biaya real ===
SLIPPAGE_PCT=0.02     # % per sisi
TAKER_FEE=0.0005
MAKER_FEE=0.0002
VERBOSE=1

# === Auto-relax control ===
FILTER_TARGET_PASS_RATIO=0.35
FILTER_HYSTERESIS_TIGHTEN=0.55   # kencengin filter lagi kalau pass_ratio > 55%
FILTER_RELAX_STEP_ATR=0.0001     # tiap relaks turunin 0.01% poin
FILTER_RELAX_STEP_BODY=0.05      # tiap relaks naikkan 0.05x ATR
FILTER_MAX_RELAX_ATR=0.0023      # jangan lebih longgar dari 0.23%
FILTER_MAX_RELAX_BODY=2.00       # plafon body/ATR

# === BE & Trailing (kalau param ini sudah didukung) ===
BE_TRIGGER_R=0.5                 # BE setelah floating gain >= 0.5R
TRAIL_MIN_STEP_PCT=0.006         # 0.6% minimum
TRAIL_MAX_STEP_PCT=0.012         # 1.2% maksimum
TRAIL_STEP_BY_ADX=1     